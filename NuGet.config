<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <!--
    Repo-local NuGet configuration.

    Why this exists:
    - If the user machine has stale/unreachable global NuGet sources (corp feeds, offline shares, etc),
      dotnet restore/build can appear to “hang” while trying those sources.

    What this does:
    - Clears inherited package sources and uses nuget.org only by default.

    If you rely on a private feed, add it here (do NOT remove nuget.org).
  -->
  <packageSources>
    <clear />
    <add key="nuget.org" value="https://api.nuget.org/v3/index.json" protocolVersion="3" />
  </packageSources>

  <config>
    <!-- Avoid interactive credential prompts that can look like a stuck build. -->
    <add key="interactive" value="false" />

    <!-- Prefer completing restore even if a source flakes (nuget.org is the only source by default). -->
    <add key="restoreIgnoreFailedSources" value="true" />
  </config>
</configuration>
