<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="PrivacyHardeningUI.Views.ConfirmApplyView"
             x:DataType="vm:MainViewModel"
             xmlns:vm="using:PrivacyHardeningUI.ViewModels"
             Width="600" Height="360">

  <Border Background="{DynamicResource PanelBrush}" CornerRadius="8" Padding="18" Width="560">
    <StackPanel Spacing="12">
      <TextBlock Classes="title" Text="Confirm Apply" />
      <TextBlock Text="You are about to apply selected policies. Review the summary below and confirm to continue." TextWrapping="Wrap"/>

      <ScrollViewer Height="180">
        <TextBlock Text="{Binding ConfirmDialogSummary}" TextWrapping="Wrap"/>
      </ScrollViewer>

      <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="8">
        <Button Content="Cancel" Command="{Binding CancelApplyConfirmationCommand}" />
        <Button Content="Apply" Command="{Binding ApplyConfirmedCommand}" Classes="accent" />
      </StackPanel>
    </StackPanel>
  </Border>

</UserControl>
