<UserControl
    x:Class="PrivacyHardeningUI.Views.PolicySelectionView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:PrivacyHardeningUI.ViewModels"
    mc:Ignorable="d">

    <Grid Padding="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header & Instructions -->
        <StackPanel Grid.Row="0" Spacing="8" Margin="0,0,0,16">
            <TextBlock Text="Individual Policy Selection"
                      Style="{StaticResource SubtitleTextBlockStyle}"/>
            <TextBlock TextWrapping="Wrap"
                      Foreground="{ThemeResource TextFillColorSecondaryBrush}">
                Select individual policies to apply. Use filters to narrow down options. Click on a policy to view details, risks, and known breakage scenarios.
            </TextBlock>
        </StackPanel>

        <!-- Filters & Bulk Actions -->
        <Grid Grid.Row="1" Margin="0,0,0,16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Search & Filter Controls -->
            <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" Spacing="12">
                <AutoSuggestBox PlaceholderText="Search policies..."
                               Text="{x:Bind ViewModel.SearchText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                               Width="300"/>

                <ComboBox Header="Category"
                         ItemsSource="{x:Bind ViewModel.Categories}"
                         SelectedItem="{x:Bind ViewModel.SelectedCategory, Mode=TwoWay}"
                         Width="200"/>

                <CheckBox Content="Show only applicable"
                         IsChecked="{x:Bind ViewModel.ShowOnlyApplicable, Mode=TwoWay}"/>

                <CheckBox Content="Show only selected"
                         IsChecked="{x:Bind ViewModel.ShowOnlySelected, Mode=TwoWay}"/>
            </StackPanel>

            <!-- Bulk Selection Actions -->
            <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" Spacing="8">
                <Button Content="Select All" Command="{x:Bind ViewModel.SelectAllCommand}"/>
                <Button Content="Select None" Command="{x:Bind ViewModel.SelectNoneCommand}"/>
                <MenuFlyoutSeparator/>
                <Button Content="Safe Only (Low Risk)">
                    <Button.Flyout>
                        <MenuFlyout>
                            <MenuFlyoutItem Text="Low Risk Only"
                                          Command="{x:Bind ViewModel.SelectByRiskCommand}"
                                          CommandParameter="Low"/>
                            <MenuFlyoutItem Text="Low + Medium Risk"
                                          Command="{x:Bind ViewModel.SelectByRiskCommand}"
                                          CommandParameter="Medium"/>
                        </MenuFlyout>
                    </Button.Flyout>
                </Button>
                <Button Content="Load Policies"
                       Command="{x:Bind ViewModel.LoadPoliciesCommand}"
                       Style="{StaticResource AccentButtonStyle}"/>
            </StackPanel>
        </Grid>

        <!-- Policy List with Individual Checkboxes -->
        <Grid Grid.Row="2">
            <ScrollViewer>
                <ItemsRepeater ItemsSource="{x:Bind ViewModel.FilteredPolicies, Mode=OneWay}">
                    <ItemsRepeater.ItemTemplate>
                        <DataTemplate x:DataType="vm:PolicyItemViewModel">
                            <Expander HorizontalAlignment="Stretch"
                                     Margin="0,0,0,8"
                                     HorizontalContentAlignment="Stretch">
                                <Expander.Header>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Checkbox -->
                                        <CheckBox Grid.Column="0"
                                                 IsChecked="{x:Bind IsSelected, Mode=TwoWay}"
                                                 Margin="0,0,12,0"
                                                 IsEnabled="{x:Bind IsApplicable}"/>

                                        <!-- Policy Name & ID -->
                                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                            <TextBlock Text="{x:Bind Name}"
                                                      Style="{StaticResource BodyStrongTextBlockStyle}"/>
                                            <TextBlock Text="{x:Bind PolicyId}"
                                                      Style="{StaticResource CaptionTextBlockStyle}"
                                                      Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                        </StackPanel>

                                        <!-- Category Badge -->
                                        <Border Grid.Column="2"
                                               Background="{ThemeResource AccentFillColorDefaultBrush}"
                                               CornerRadius="4"
                                               Padding="8,4"
                                               Margin="8,0">
                                            <TextBlock Text="{x:Bind Category}"
                                                      Foreground="White"
                                                      Style="{StaticResource CaptionTextBlockStyle}"/>
                                        </Border>

                                        <!-- Risk Badge -->
                                        <Border Grid.Column="3"
                                               Background="{ThemeResource SystemFillColorCautionBrush}"
                                               CornerRadius="4"
                                               Padding="8,4"
                                               Margin="4,0">
                                            <TextBlock Text="{x:Bind RiskBadge}"
                                                      Style="{StaticResource CaptionTextBlockStyle}"/>
                                        </Border>

                                        <!-- Support Badge -->
                                        <Border Grid.Column="4"
                                               Background="{ThemeResource SystemFillColorSuccessBrush}"
                                               CornerRadius="4"
                                               Padding="8,4"
                                               Margin="4,0">
                                            <TextBlock Text="{x:Bind SupportBadge}"
                                                      Style="{StaticResource CaptionTextBlockStyle}"/>
                                        </Border>
                                    </Grid>
                                </Expander.Header>

                                <!-- Expanded Details -->
                                <Grid Padding="48,16,16,16">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!-- Description -->
                                    <StackPanel Grid.Row="0" Margin="0,0,0,12">
                                        <TextBlock Text="Description"
                                                  Style="{StaticResource BodyStrongTextBlockStyle}"
                                                  Margin="0,0,0,4"/>
                                        <TextBlock Text="{x:Bind Description}"
                                                  TextWrapping="Wrap"
                                                  Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                    </StackPanel>

                                    <!-- Known Breakage -->
                                    <StackPanel Grid.Row="1" Margin="0,0,0,12"
                                               Visibility="{x:Bind KnownBreakage.Length, Converter={StaticResource CountToVisibilityConverter}}">
                                        <TextBlock Text="âš  Known Breakage Scenarios"
                                                  Style="{StaticResource BodyStrongTextBlockStyle}"
                                                  Foreground="{ThemeResource SystemFillColorCautionBrush}"
                                                  Margin="0,0,0,4"/>
                                        <ItemsControl ItemsSource="{x:Bind KnownBreakage}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate x:DataType="x:Object">
                                                    <TextBlock Text="{x:Bind}"
                                                              Margin="16,2,0,2"
                                                              TextWrapping="Wrap"/>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </StackPanel>

                                    <!-- Dependencies -->
                                    <StackPanel Grid.Row="2" Margin="0,0,0,12"
                                               Visibility="{x:Bind Dependencies.Length, Converter={StaticResource CountToVisibilityConverter}}">
                                        <TextBlock Text="Dependencies"
                                                  Style="{StaticResource BodyStrongTextBlockStyle}"
                                                  Margin="0,0,0,4"/>
                                        <TextBlock Text="{x:Bind Dependencies}"
                                                  Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                    </StackPanel>

                                    <!-- Notes -->
                                    <StackPanel Grid.Row="3" Margin="0,0,0,12"
                                               Visibility="{x:Bind Notes, Converter={StaticResource NullToVisibilityConverter}}">
                                        <TextBlock Text="Important Notes"
                                                  Style="{StaticResource BodyStrongTextBlockStyle}"
                                                  Margin="0,0,0,4"/>
                                        <TextBlock Text="{x:Bind Notes}"
                                                  TextWrapping="Wrap"
                                                  Foreground="{ThemeResource SystemFillColorCautionBrush}"/>
                                    </StackPanel>

                                    <!-- Metadata -->
                                    <Grid Grid.Row="4">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="Mechanism" Style="{StaticResource CaptionTextBlockStyle}"/>
                                            <TextBlock Text="{x:Bind Mechanism}"/>
                                        </StackPanel>

                                        <StackPanel Grid.Column="1">
                                            <TextBlock Text="Reversible" Style="{StaticResource CaptionTextBlockStyle}"/>
                                            <TextBlock Text="{x:Bind Reversible}"/>
                                        </StackPanel>

                                        <StackPanel Grid.Column="2">
                                            <TextBlock Text="Currently Applied" Style="{StaticResource CaptionTextBlockStyle}"/>
                                            <TextBlock Text="{x:Bind IsApplied}"/>
                                        </StackPanel>
                                    </Grid>
                                </Grid>
                            </Expander>
                        </DataTemplate>
                    </ItemsRepeater.ItemTemplate>
                </ItemsRepeater>
            </ScrollViewer>

            <!-- Empty State -->
            <StackPanel HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Visibility="{x:Bind ViewModel.FilteredPolicies.Count, Mode=OneWay, Converter={StaticResource ZeroToVisibilityConverter}}">
                <FontIcon Glyph="&#xE783;" FontSize="64" Foreground="{ThemeResource TextFillColorTertiaryBrush}"/>
                <TextBlock Text="No policies match your filters"
                          Style="{StaticResource SubtitleTextBlockStyle}"
                          Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                          Margin="0,16,0,0"/>
                <Button Content="Load Policies"
                       Command="{x:Bind ViewModel.LoadPoliciesCommand}"
                       Margin="0,16,0,0"/>
            </StackPanel>

            <!-- Loading Indicator -->
            <ProgressRing IsActive="{x:Bind ViewModel.IsLoading, Mode=OneWay}"
                         Width="60" Height="60"/>

            <!-- Error Message -->
            <InfoBar Severity="Error"
                    IsOpen="{x:Bind ViewModel.ErrorMessage, Mode=OneWay, Converter={StaticResource NullToBoolConverter}}"
                    Message="{x:Bind ViewModel.ErrorMessage, Mode=OneWay}"
                    VerticalAlignment="Top"
                    Margin="0,0,0,16"/>
        </Grid>
    </Grid>
</UserControl>
