<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="using:PrivacyHardeningUI.Views"
        xmlns:controls="using:PrivacyHardeningUI.Controls"
        xmlns:vm="using:PrivacyHardeningUI.ViewModels"
        mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
        x:Class="PrivacyHardeningUI.Views.MainWindow"
        x:DataType="vm:MainViewModel"
        Title="Windows 11 Privacy Hardening Framework"
        MinWidth="1200" MinHeight="800">

    <Window.DataTemplates>
        <DataTemplate DataType="vm:DashboardViewModel">
            <views:DashboardView />
        </DataTemplate>
        <DataTemplate DataType="vm:AuditViewModel">
            <views:AuditView />
        </DataTemplate>
        <DataTemplate DataType="vm:ApplyViewModel">
            <views:ApplyView />
        </DataTemplate>
        <DataTemplate DataType="vm:PreviewViewModel">
            <views:PreviewView />
        </DataTemplate>
        <DataTemplate DataType="vm:HistoryViewModel">
            <views:HistoryView />
        </DataTemplate>
        <DataTemplate DataType="vm:DriftViewModel">
            <views:DriftView />
        </DataTemplate>
        <DataTemplate DataType="vm:ReportsViewModel">
            <views:ReportsView />
        </DataTemplate>
    </Window.DataTemplates>

    <Grid RowDefinitions="Auto,*,Auto" ColumnDefinitions="240,*,320" Margin="12">

        <!-- Top command bar (compact) -->
        <Border Grid.Row="0" Grid.ColumnSpan="3" Background="{DynamicResource PanelBrush}" Padding="10" CornerRadius="8">
            <Grid ColumnDefinitions="Auto,*,Auto" VerticalAlignment="Center">
                <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="10" VerticalAlignment="Center">
                    <controls:IconHelper Name="privacy" />
                    <StackPanel Spacing="0">
                        <TextBlock FontWeight="{DynamicResource FontWeightSemiBold}" FontSize="{DynamicResource FontSizeBodyLarge}" Text="Privacy Hardening Framework" />
                        <TextBlock Opacity="0.75" FontSize="{DynamicResource FontSizeCaption}" Text="Audit → Preview → Apply → Verify → Undo" />
                    </StackPanel>
                </StackPanel>

                <TextBlock Grid.Column="1" Text="{Binding StatusMessage}" Opacity="0.75" VerticalAlignment="Center" Margin="12,0" />

                <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                    <Button Command="{Binding ToggleThemeCommand}" ToolTip.Tip="Toggle Light/Dark" Padding="10,6">
                        <StackPanel Orientation="Horizontal" Spacing="6">
                            <controls:IconHelper Name="theme" />
                            <TextBlock Text="Theme" />
                        </StackPanel>
                    </Button>
                    <Button Command="{Binding OpenSettingsCommand}" ToolTip.Tip="Settings" Padding="10,6">
                        <StackPanel Orientation="Horizontal" Spacing="6">
                            <controls:IconHelper Name="settings" />
                            <TextBlock Text="Settings" />
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Left navigation -->
        <Border Grid.Row="1" Grid.Column="0" Background="{DynamicResource CardBrush}" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" CornerRadius="8" Padding="6" Margin="0,12,12,0">
            <ListBox ItemsSource="{Binding NavItems}" SelectedItem="{Binding SelectedNavItem}">
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <VirtualizingStackPanel />
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border Padding="10,8" CornerRadius="6" HorizontalAlignment="Stretch">
                            <Grid ColumnDefinitions="Auto,*" ColumnSpacing="10">
                                <controls:IconHelper Name="{Binding Icon}" />
                                <TextBlock Grid.Column="1" Text="{Binding Title}" VerticalAlignment="Center" />
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Border>

        <!-- Main page host -->
        <Border Grid.Row="1" Grid.Column="1" Background="{DynamicResource SurfaceBrush}" CornerRadius="8" Margin="0,12,12,0">
            <ContentControl Content="{Binding CurrentPage}" />
        </Border>

        <!-- Status rail -->
        <views:StatusRailView Grid.Row="1" Grid.Column="2" DataContext="{Binding StatusRail}" Margin="0,12,0,0" />

        <!-- Bottom: snackbars + non-blocking notifications -->
        <controls:Snackbar Grid.Row="2" Grid.ColumnSpan="3" DataContext="{Binding}" />
    </Grid>
</Window>
