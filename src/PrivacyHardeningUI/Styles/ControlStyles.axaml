<?xml version="1.0" encoding="utf-8"?>
<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <!-- TextBlock base -->
  <Style Selector="TextBlock">
    <Setter Property="FontFamily" Value="{DynamicResource AppFontFamily}" />
    <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}" />
  </Style>

  <Style Selector="TextBlock.title">
    <Setter Property="FontSize" Value="{DynamicResource FontSizeTitle}" />
    <Setter Property="FontWeight" Value="Bold" />
  </Style>

  <Style Selector="TextBlock.subtitle">
    <Setter Property="FontSize" Value="{DynamicResource FontSizeSubtitle}" />
    <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}" />
  </Style>

  <!-- Button styles -->
  <Style Selector="Button">
    <Setter Property="FontFamily" Value="{DynamicResource AppFontFamily}" />
    <Setter Property="Padding" Value="10,6" />
    <Setter Property="CornerRadius" Value="{DynamicResource CornerRadiusSmall}" />
  </Style>

  <Style Selector="Button.accent">
    <Setter Property="Background" Value="{DynamicResource AccentBrush}" />
    <Setter Property="Foreground" Value="White" />
  </Style>

  <!-- Interaction states for buttons -->
  <Style Selector="Button:pointerover">
    <Setter Property="Opacity" Value="0.95" />
  </Style>

  <Style Selector="Button:pressed">
    <Setter Property="Opacity" Value="0.88" />
    <Setter Property="RenderTransform">
      <Setter.Value>
        <TranslateTransform X="0" Y="1" />
      </Setter.Value>
    </Setter>
  </Style>

  <!-- Accent button hover/pressed specific styling -->
  <Style Selector="Button.accent:pointerover">
    <Setter Property="Background" Value="{DynamicResource AccentHoverBrush}" />
  </Style>

  <Style Selector="Button.accent:pressed">
    <Setter Property="Background" Value="{DynamicResource AccentPressedBrush}" />
  </Style>

  <!-- Focus visuals for keyboard users -->
  <Style Selector="Button:focus">
    <Setter Property="BorderBrush" Value="{DynamicResource AccentBrush}" />
    <Setter Property="BorderThickness" Value="2" />
  </Style>

  <!-- TextBox focus style -->
  <Style Selector="TextBox:focus">
    <Setter Property="BorderBrush" Value="{DynamicResource AccentBrush}" />
    <Setter Property="BorderThickness" Value="2" />
  </Style>

  <Style Selector="Window">
    <Setter Property="Background" Value="{DynamicResource SurfaceBrush}" />
    <Setter Property="FontFamily" Value="{DynamicResource AppFontFamily}" />
  </Style>

  <!-- Card style for list items -->
  <Style Selector="Border.card">
    <Setter Property="Background" Value="{DynamicResource SurfaceBrush}" />
    <Setter Property="BorderBrush" Value="{DynamicResource PanelBrush}" />
    <Setter Property="BorderThickness" Value="1" />
    <Setter Property="CornerRadius" Value="6" />
    <Setter Property="Padding" Value="14" />
    <Setter Property="Margin" Value="0,0,0,8" />
    <Setter Property="RenderTransform">
      <Setter.Value>
        <TranslateTransform X="0" Y="0" />
      </Setter.Value>
    </Setter>
    <Setter Property="Transitions">
      <Setter.Value>
        <Transitions>
          <DoubleTransition Property="Opacity" Duration="0:0:0.12" />
        </Transitions>
      </Setter.Value>
    </Setter>
  </Style>

  <Style Selector="Border.card:pointerover">
    <Setter Property="RenderTransform">
      <Setter.Value>
        <TranslateTransform X="0" Y="-6" />
      </Setter.Value>
    </Setter>
    <Setter Property="Opacity" Value="0.98" />
    <Setter Property="BorderBrush" Value="{DynamicResource AccentBrush}" />
  </Style>

  <Style Selector="ListBoxItem">
    <Setter Property="Padding" Value="6" />
    <Setter Property="Focusable" Value="True" />
  </Style>

  <Style Selector="ListBoxItem:focus">
    <Setter Property="Background" Value="{DynamicResource PanelBrush}" />
    <Setter Property="BorderBrush" Value="{DynamicResource AccentBrush}" />
    <Setter Property="BorderThickness" Value="1" />
  </Style>

</Styles>
